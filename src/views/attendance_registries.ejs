<%- include('header', {title: 'Παρουσιολόγια'}) %>

<h4>Παρουσιολόγια Μαθήματος</h4>
<span>Μάθημα: <%= course.name %></span>

<% if (attendance_registry_records.length) { %>
    <table class="table mt-3">
        <thead>
            <th>Ημερομηνία</th>
            <th>Αίθουσα</th>
            <th>
                <span class="d-none d-sm-inline">Οριστικοποιημένο</span>
                <span class="d-sm-none">Οριστικ.</span>
            </th>
            <th class="d-none d-sm-table-cell"></th>
        </thead>
        <tbody>
            <% attendance_registry_records.forEach(attRec => { %>
                <tr>
                    <td><%= attRec.date_str %></td>
                    <td><%= attRec.room_name %></td>
                    <td>
                        <% if (attRec.finalized) { %>
                            <i class="fa-regular fa-square-check icon_finalized icon_finalized__check"></i>
                        <% } else { %>
                            <i class="fa-regular fa-circle-xmark icon_finalized icon_finalized__xmark"></i>
                        <% } %>

                    </td>
                    <td class="d-none d-sm-table-cell">
                        <a class="btn btn-primary" href="/view_past_attendance?arid=<%= attRec.id %>">
                            ΠΡΟΒΟΛΗ
                        </a>

                    </td>
                </tr>
                <tr class="d-sm-none">
                    <td colspan="3">
                        <a class="btn btn-primary btn-sm w-100" href="/view_past_attendance?arid=<%= attRec.id %>">
                            ΠΡΟΒΟΛΗ
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <br>
    <span>Δεν βρέθηκαν παρουσιολόγια για το συγκεκριμένο μάθημα</span>
<% } %>


<%- include('footer') %>
