<%- include(
    'header',
    {
        title: 'Αρχική Σελίδα',
        is_index: true,
        loggedin: data.loggedin,
        username: data.username
    }
) %>

<% if (data.loggedin) {
    switch (data.role) {
        case 'student': %>
            <%- include('student_homepage', {data: data}); %>
            <%
            break;
        case 'secretary': %>
            <%- include('secretary_homepage', {data: data}); %>
            <%
            break;
        case 'professor': %>
            <%- include('professor_homepage', {data: data}); %>
            <%
            break;

        case 'admin': %>
            <%- include('admin_homepage', {data: data}); %>
            <%
            break;
        default:
            break;
        }
} else { %>
    <form class="form mx-auto responsive_form" method="POST" action="/login">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="password">Κωδικός</label>
            <input type="password" name="password" id="password" class="form-control" required>
        </div>
        <input type="submit" class="btn btn-primary" value="ΣΥΝΔΕΣΗ">
    </form>
<% } %>

<%- include('footer') %>