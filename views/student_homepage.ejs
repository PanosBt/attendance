<% if (data.active_courses.length) { %>
    <table class="table">
        <thead>
            <th>Μάθημα</th>
            <th>Εξάμηνο</th>
            <th>Διδάσκων/ουσα</th>
            <th>Αίθουσα</th>
            <th>Ώρες</th>
            <th></th>
        </thead>
        <tbody>
            <% data.active_courses.forEach(course => { %>
                <tr>
                    <td><%= course.name %></td>
                    <td><%= course.semester %></td>
                    <td><%= course.professor_name %></td>
                    <td><%= course.room_name %></td>
                    <td><%= `${course.time_from} - ${course.time_to}` %></td>
                    <td>
                        <a class="btn btn-primary" href="/declare_attendance?cid=<%= course.id %>">
                            Δήλωση Παρουσίας
                        </a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>Δεν βρέθηκαν μαθήματα</p>
<% } %>