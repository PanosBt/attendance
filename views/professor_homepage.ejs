<h5>Ανοιχτά Μαθήματα</h5>
<% if (data.active_courses.length) { %>
    <table class="table">
        <thead>
            <th>Μάθημα</th>
            <th class="d-none d-sm-table-cell">Εξάμηνο</th>
            <th>Αίθουσα</th>
            <th>Ώρες</th>
            <th></th>
        </thead>
        <tbody>
            <% data.active_courses.forEach(course => { %>
                <tr>
                    <td><%= course.name %></td>
                    <td class="d-none d-sm-table-cell"><%= course.semester %></td>
                    <td><%= course.room_name %></td>
                    <td><%= `${course.time_from} - ${course.time_to}` %></td>
                    <td>
                        <a class="btn btn-primary d-none d-sm-inline-block" href="/view_attendance?cid=<%= course.id %>">
                            Προβολή
                        </a>
                        <a class="btn btn-primary btn-sm d-sm-none" href="/view_attendance?cid=<%= course.id %>">
                            Προβολή
                        </a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>Δεν βρέθηκαν ανοιχτά μαθήματα για δήλωση παρουσιών</p>
<% } %>

