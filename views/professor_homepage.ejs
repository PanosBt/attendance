<h5>Ανοιχτά Μαθήματα</h5>
<% if (data.active_courses.length) { %>
    <table class="table">
        <thead>
            <th>Μάθημα</th>
            <th >Εξάμηνο</th>
            <th>Αίθουσα</th>
            <th>Ώρες</th>
            <th class="d-none d-sm-table-cell"></th>
        </thead>
        <tbody>
            <% data.active_courses.forEach(course => { %>
                <tr>
                    <td><%= course.name %></td>
                    <td><%= course.semester %></td>
                    <td><%= course.room_name %></td>
                    <td><%= `${course.time_from} - ${course.time_to}` %></td>
                    <td class="d-none d-sm-table-cell">
                        <a class="btn btn-primary" href="/view_attendance?cid=<%= course.id %>">
                            Προβολή
                        </a>
                    </td>
                </tr>
                <tr class="d-sm-none">
                    <td colspan="4">
                        <a class="btn btn-primary btn-sm w-100" href="/view_attendance?cid=<%= course.id %>">
                            Προβολή
                        </a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>Δεν βρέθηκαν ανοιχτά μαθήματα για δήλωση παρουσιών</p>
<% } %>

